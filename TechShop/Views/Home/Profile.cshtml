@model TechShop.Models.Account_Cus
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-6">
                <div class="card">
                    <div class="header">
                       <center><h4 class="title">User Profile</h4></center> 
                    </div>
                    <div class="content">
                        <form>
                            <center>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input type="text" class="form-control txt" readonly placeholder="Username" value="@Model.Username" style="color: black;">
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Full Name</label>
                                        <input type="text" class="form-control txt" readonly placeholder="Full Name" value="@Model.Name" style="color: black;">
                                    </div>
                                </div>

                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label>Email address</label>
                                        <input type="text" class="form-control txt" readonly placeholder="Email" value="@Model.Email" style="color: black;">
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Date of Birth</label>
                                        <input type="date" class="form-control" readonly placeholder="Date of birth" value="@Model.DOB" style="color: black;">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        <input type="text" class="form-control" readonly placeholder="Phone" value="@Model.Tel" style="color: black;">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("ChangeProfile","Home")" class="btn btn-info btn-fill pull-right">Edit Profile</a>
                                </div>
                            </center>

                            




                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" class="form-control" readonly placeholder="Enter Your Old Password" value="@Model.Password" style="color: black;">
                                    </div>
                                </div>

                                
                                   
                                        <center>
                                            <div class="form-group" style="margin:35px 0px ">
                                                <a class="" href="@Url.Action("ChangePassword","Home")" style="margin-left:10px">Change Password</a>
                                            </div>
                                        </center>
                                        
                   
                             
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
<!-----------------------BODY------------------------->
<script>
    function Data(el) {
        $('.filter-light').removeClass('active');
        $(el).parent().addClass('active');
    }
</script>

