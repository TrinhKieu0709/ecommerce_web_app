@using (Html.BeginForm("LoginAccount", "Home", FormMethod.Post, new { @id = "frm-login" }))
{
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            @Html.AntiForgeryToken()
                            <span class="text-danger">@ViewBag.err</span>
                            <h4>Hello! let's get started</h4>
                            <h6 class="font-weight-light">Sign in to continue.</h6>

                            <div class="form-group first">
                                <label for="username">Username</label>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Username..." })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group last mb-3">
                                <label for="password">Password</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password..." })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-check">
                                <label class="form-check-label text-muted">
                                    <input type="checkbox" class="form-check-input">
                                    Keep me signed in
                                </label>
                            </div>

                            <div class="d-sm-flex mb-5 align-items-center">
                                <a href="/Home/ForgotPassword" class="auth-link text-black">Forgot password?</a>
                                @*<span class="ml-auto"><a href="/Home/ForgotPassword" class="forgot-pass">Forgot Password</a></span>*@
                            </div>
                            <div class="mt-3">
                                <input type="submit" value="Log In" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">

                            </div>
                            <div class="mb-2">
                                <a class="btn btn-block btn-facebook auth-form-btn" href="LoginFacebook">
                                    <i class="ti-facebook mr-2"></i>
                                    Connect using facebook
                                </a>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Don't have an account? <a href="/Home/Register" class="text-primary">Create</a>
                            </div>


                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        

