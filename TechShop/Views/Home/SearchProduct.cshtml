@using TechShop.Models
@model List<Product>

@{
    ViewBag.Title = "SearchProduct";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Search Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li data-filter=".oranges">IPhone</li>
                        <li data-filter=".fresh-meat">IPad</li>
                        <li data-filter=".vegetables">MacBook</li>
                        <li data-filter=".fastfood">IMac</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges ">
                <div class="featured__item">
                    @{
                        foreach (var item in Model)
                        {
                            <div class="featured__item__pic set-bg" data-setbg="@Url.Content("~/FileImage/ProductImage/"+item.Image)">

                                <ul class="featured__item__pic__hover">
                                    <li><a href="@Url.Action("Details", "Home", new { id = item.Product_Id }, null)"><i class="fa fa-eye"></i></a></li>

                                    <li><a href="@Url.Action("OrderNow","ShoppingCart", new { id = item.Product_Id }, null)"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="#">@item.Product_Name</a></h6>
                                <h5> @item.Price $</h5>
                            </div>
                        }

                    }

                </div>
            </div>

        </div>
    </div>
</section>
@*Featured Section End*@

