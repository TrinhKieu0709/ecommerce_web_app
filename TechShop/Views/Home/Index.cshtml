@using TechShop.Models;
@using PagedList;
@model List<Product>

@*@model TechShop.ViewModel.CommentViewModel*@


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li data-filter=".oranges">IPhone</li>
                        <li data-filter=".fresh-meat">IPad</li>
                        <li data-filter=".vegetables">MacBook</li>
                        <li data-filter=".fastfood">IMac</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row featured__filter">
            <div class="col-lg-3 col-md-4 col-sm-6">

            </div>

        </div>
    </div>

</section>

    <div class="row product-container">
        <div class="col-md-3 col-sm-3 col-xs-6" style="margin-bottom:8px">
            <div class="featured__item">
                @{

                    foreach (var item in Model)
                    {

                        <div class="featured__item__pic set-bg" data-setbg="@Url.Content("~/FileImage/ProductImage/" + item.Image)">

                            <ul class="featured__item__pic__hover">
                                <li><a href="@Url.Action("Details", "Home", new { id = item.Product_Id }, null)"><i class="fa fa-eye"></i></a></li>

                                <li><a href="@Url.Action("OrderNow", "ShoppingCart", new { id = item.Product_Id }, null)"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.Product_Name</a></h6>
                            <h5> @item.Price $</h5>
                        </div>
                    }

                }
            </div>
        </div>


    </div>






    @*Featured Section End*@





    <!-- Featured Section End  -->
