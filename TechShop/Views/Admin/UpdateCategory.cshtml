@model TechShop.Models.Category

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_LayoutAdminHome.cshtml";
}

<h2>UpdateCategory</h2>

@using (Html.BeginForm("AddOrEditCatgory", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Category_Id)
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Category_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Category_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Category_Name, "", new { @class = "text-danger" })
                    <span class="text-danger">@ViewBag.error</span>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" value="Save" class="btn btn-primary mr-2">Create</button>
    <button class="btn btn-light">Cancel</button>
}